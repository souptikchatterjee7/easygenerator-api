{
    "env": {
        "node": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:import/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": 0,
        "linebreak-style": 0,
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-console": 0,
        "max-lines-per-function": [2, 50],
        "no-unused-vars": 0,
        "no-empty": 0,
        "no-empty-function": 0,
        "no-explicit-any": 0,
        "import/extensions": 0,
        "import/no-extraneous-dependencies": 0,
        "no-useless-constructor": 0,
        "import/named": 0,
        "import/no-unresolved": 0,
        "no-this-alias": 0,
        "no-control-regex": 0,
        "no-useless-escape": 0,
        "no-useless-catch": 0
    },
    "ignorePatterns": ["server/app.js"]
}
